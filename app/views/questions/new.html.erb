<% provide(:title, "問題作成ページ") %>
<h3><%= @training.title %>の問題を作成</h3>
<%= form_with model: [@training ,@question], local:true do |f| %>
  <div>
    <%= f.label :number, "設問番号" %>
    <%= f.select :number, [*1..20], { include_blank: '--'} %>
    <%= f.label :content, "設問内容" %>
    <%= f.text_field :content %>
    <%= f.hidden_field :training_id, :value => @training.id %>
  </div>
  <%= f.fields_for :choices do |c| %>
    <div>
      <%= c.label :content, "選択肢" %>
      <%= c.text_field :content %>
      <%= c.check_box :is_answer, {class: ""}, true, false %>
      <%= c.label :is_answer, "正解ならチェック" %>
    </div>
  <% end %>

  <p><%= f.submit %></p>
<% end %>